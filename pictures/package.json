{
  "name": "@dnb-org-shortcodes/pictures",
  "version": "0.0.12",
  "license": "MIT",
  "description": "Image shortcodes for Hugo",
  "author": "Patrick Kollitsch <patrick@davids-neighbour.com>",
  "homepage": "https://github.com/dnb-org/shortcodes",
  "bugs": {
    "url": "https://github.com/dnb-org/shortcodes/issues"
  },
  "dependencies": {
    "har-validator": "^5.1.5"
  },
  "devDependencies": {
    "@dnb-org/cypress-config": "^3.4.2",
    "@dnb-org/eslint-config": "^3.4.14",
    "@dnb-org/prettier-config": "^3.4.3",
    "@dnb-org/standard-version-config": "^3.4.0",
    "@dnb-org/tools": "^3.4.0",
    "bootstrap": "^5.1.3"
  },
  "scripts": {
    "clean": "run-p clean:**",
    "clean:cypress": "rimraf tests/cypress/screenshots tests/cypress/videos",
    "clean:hugo": "rimraf dev/public dev/resources dev/.hugo_build.lock hugo.log",
    "clean:node": "rimraf node_modules package-lock.json",
    "release": "standard-version --release-as patch -a -t \"pictures/v\" --releaseCommitMessageFormat \"chore(release): pictures/v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release-major": "standard-version --release-as major -a -t \"pictures/v\" --releaseCommitMessageFormat \"chore(release): pictures/v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release-next": "standard-version --release-as minor -a -t \"pictures/v\" --releaseCommitMessageFormat \"chore(release): pictures/v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "serve": "run-p serve:hugo",
    "serve:hugo": "bin/dnb-hugo-dev-server.sh",
    "server": "npm run serve",
    "test": "run-p test:server test:cypress",
    "test:cypress": "cypress run",
    "test:cypress:ide": "cypress open",
    "test:ide": "run-p test:server test:cypress:ide",
    "test:server": "./bin/dnb-hugo-test-server.sh"
  },
  "private": true
}
