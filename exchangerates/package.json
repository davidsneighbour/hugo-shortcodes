{
  "name": "@dnb-org-shortcodes/exchangerates",
  "description": "Shortcodes for Gohugo",
  "version": "0.0.0",
  "author": "Patrick Kollitsch <patrick@davids-neighbour.com>",
  "bugs": {
    "url": "https://github.com/dnb-org/shortcodes/issues"
  },
  "devDependencies": {
    "@dnb-org/remark-config": "3.2.25",
    "@dnb-org/standard-version-config": "3.2.22"
  },
  "homepage": "https://github.com/dnb-org/shortcodes",
  "license": "MIT",
  "private": true,
  "scripts": {
    "release": "standard-version --release-as patch -a -t \"exchangerates/v\" --releaseCommitMessageFormat \"chore(release): exchangerates/v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release-major": "standard-version --release-as major -a -t \"exchangerates/v\" --releaseCommitMessageFormat \"chore(release): exchangerates/v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "release-next": "standard-version --release-as minor -a -t \"exchangerates/v\" --releaseCommitMessageFormat \"chore(release): exchangerates/v{{currentTag}}\" && ./bin/release-hook-postrelease.sh",
    "remark": "remark"
  }
}
